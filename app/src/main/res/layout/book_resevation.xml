<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teal_background"
    tools:context="com.lib.StudentBookReservation" >

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CD3750"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="University of Genoa"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header" >

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Book Name"
                     android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <View
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txt_book_res_book_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Author"
                   android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />

                <View
                    android:id="@+id/SplitLine_hor3"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    />

                <TextView
                    android:id="@+id/txt_book_res_book_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_lay_book_image_txt"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/layout2"
                android:layout_margin="2dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/txt_book_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:paddingBottom="2dp"
                        android:text="Book Image"
                        android:textColor="#000000"
                        android:textStyle="bold|italic" />
                    <View
                    android:id="@+id/SplitLine_hor_img"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_book_img"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_lay_book_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_lay_book_image_txt"
                android:layout_centerHorizontal="true" >

                <RelativeLayout
                    android:layout_width="411dp"
                    android:layout_height="212dp"
                    android:layout_margin="3dp">

                    <ImageView
                        android:id="@+id/imgview_book_res_book_image"
                        android:layout_width="137dp"
                        android:layout_height="164dp"
                        android:layout_centerInParent="true"
                        android:paddingLeft="5dp"
                        android:typeface="serif" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_lay_book_img"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="ISBN"
                     android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <View
                    android:id="@+id/SplitLine_hor4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txt_book_res_book_isbn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout5"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <View
                    android:id="@+id/SplitLine_hor5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/txt_book_res_book_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="20"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout6"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Book Availiability"
                   android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <View
                    android:id="@+id/SplitLine_hor6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txt_book_res_book_availability"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_lay_reservation_eligibility"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout7"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Reservation Eligibility"
                  android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <View
                    android:id="@+id/SplitLine_hor7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/txt_book_res_book_res_eligibility"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_btn_book_reserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_lay_reservation_eligibility"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dip"
                android:padding="5dp"
                android:text="Reserve"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic|bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>